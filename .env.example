# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-mini
EMBEDDING_MODEL=text-embedding-3-small

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Evaluation Configuration
EVAL_TEST_SET_PATH=data/test_set.json
EVAL_REPORTS_DIR=reports

# DeepEval Metric Thresholds (0.0 to 1.0)
EVAL_FAITHFULNESS_THRESHOLD=0.7
EVAL_ANSWER_RELEVANCY_THRESHOLD=0.7
EVAL_CONTEXTUAL_PRECISION_THRESHOLD=0.7
EVAL_CONTEXTUAL_RECALL_THRESHOLD=0.7

# DeepEval Configuration
# Set to False to avoid rate limits (evaluates sequentially)
DEEPEVAL_ASYNC_MODE=False

# OpenAI API timeout in seconds (default: 600s = 10 minutes)
OPENAI_TIMEOUT=600

# DeepEval timeout settings (in seconds)
DEEPEVAL_PER_TASK_TIMEOUT=900      # Total time per task including retries (15 min)
DEEPEVAL_PER_ATTEMPT_TIMEOUT=300   # Timeout per API call attempt (5 min)
DEEPEVAL_MAX_RETRIES=3             # Maximum retry attempts

# Data Directories
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
